---
import Layout from '../layouts/Layout.astro';
import JobItem from '../components/JobItem.astro';
import experience from "../data/experience.json";

---

<Layout title="Cheng Yu's Portfolio">
	<section class="py-8">
		<div class="container px-4 mx-auto flex flex-col items-start">
			<h2 class="font-bold text-4xl text-indigo-600">Building products with scalable code</h2>
			<p class="mt-4 text-lg">A software engineer obsessed with creating useful products.</p>
			<!-- <a href="projects" class="mt-4 py-2 px-4 rounded border-solid border-2 border-indigo-500 hover:bg-indigo-500 hover:text-white font-bold">
				View my projectscv
				<svg class="inline" xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24"><path fill="currentColor" d="M12 13H4v-2h8V4l8 8l-8 8v-7Z"></path></svg>
			</a> -->
		</div>
	</section>
	<section class="py-8 bg-slate-200">
		<div class="container px-4 mx-auto flex flex-col">
			<h2 class="font-bold text-4xl text-indigo-600">Work Experience</h2>
			<ol class="ml-2 mt-4 relative border-l-4 border-red-600">
				{experience.jobs.map((job, index, { length }) => (
					<JobItem
						firstJob={length - 1 === index}
						title={job.title}
						company={job.company}
						location={job.location}
						startDate={job.startDate}
						endDate={job.endDate}
						accomplishments={job.accomplishments}
					/>
				))}
			</ol>
		</div>
	</section>
</Layout>
