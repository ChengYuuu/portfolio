---
import Layout from '../layouts/Layout.astro';
import ProjectItem from '../components/ProjectItem.astro';
import project from "../data/project.json";

---

<Layout title="Projects">
	<section class="py-8 bg-slate-200">
		<div class="container px-4 mx-auto flex flex-col">
			<h2 class="font-bold text-4xl mb-4 text-indigo-600">Projects</h2>
			<p class="font-bold text-violet-500 mb-4">Learn more about some projects that I have worked on previously</p>
			{project.projects.map((proj) => (
				<ProjectItem
					title={proj.title}
					startDate={proj.startDate}
					endDate={proj.endDate}
					descriptions={proj.descriptions}
				/>
			))}
		</div>
	</section>
</Layout>
